<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StepMaster.Views.StartPage"
             xmlns:vm="clr-namespace:StepMaster.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:StartViewModel />
    </ContentPage.BindingContext>
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
            <Color x:Key="numberOfStepsColor">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <StackLayout>

        <Label Text="Twoja liczba kroków dzisiaj:" FontSize="30" />

        <Label Text="{Binding NumberOfSteps}" FontSize="30" HorizontalOptions="Center" TextColor="Red"/>

        <Button Text="Start" HeightRequest="70" WidthRequest="100" FontSize="20" HorizontalOptions="Center"
                Command="{Binding CountStepsCommand}" IsEnabled="{Binding StartButtonEnabled}"></Button>

        <Button Text="Stop" HeightRequest="70" WidthRequest="100" FontSize="20" HorizontalOptions="Center"
                Command="{Binding StopCountingStepsCommand}" IsEnabled="{Binding StopButtonEnabled}"></Button>

    </StackLayout>


</ContentPage>
